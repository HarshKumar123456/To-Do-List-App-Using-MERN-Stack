{
  "version": 2,
  "builds": [
    { "src": "client/build/**", "use": "@vercel/static" },
    { "src": "server/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/server/(.*)", "dest": "/server/$1" },
    { "src": "/api/(.*)", "dest": "/server/$1" },
    { "src": "/(.*)", "dest": "/client/build/$1" }
  ]
}
